<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:FocusCycle.Infrasctructure.Commands"
                    xmlns:ap="clr-namespace:FocusCycle.Infrasctructure.AttachedProperties">
    
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverte"/>
    
    <Style TargetType="Window"
           x:Key="WindowMainStyle">
        <Setter Property="ResizeMode" Value="CanMinimize"/>
        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome CaptionHeight="30"
                              CornerRadius="10"
                              UseAeroCaptionButtons="False"
                              ResizeBorderThickness="5"
                              GlassFrameThickness="0"
                              NonClientFrameEdges="None"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Window">
                    <Border x:Name="PART_Border" Background="{StaticResource SolidColorBrush_DarkChocolate}" Padding="7,5">
                        <Grid x:Name="PART_MainGrid">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <UniformGrid Rows="1" Grid.Row="0" HorizontalAlignment="Right"
                                         Margin="0,0,0,3">
                                <Button Style="{StaticResource SettingButtonStyle}"
                                        Visibility="{Binding RelativeSource={RelativeSource AncestorType=Window}, 
                                            Path=(ap:WindowProperties.ShowSettings), 
                                            Converter={StaticResource BooleanToVisibilityConverte}}">
                                    <Button.Command>
                                        <c:OpenSettingsCommand/>
                                    </Button.Command>
                                </Button>
                                <Button Style="{StaticResource MinimizeWindowButtonStyle}">
                                    <Button.Command>
                                        <c:MinimizeWindowCommand/>
                                    </Button.Command>
                                </Button>
                                <Button Style="{StaticResource CloseWindowButtonStyle}">
                                    <Button.Command>
                                        <c:CloseWindowCommand/>
                                    </Button.Command>
                                </Button>
                            </UniformGrid>
                            <Border Grid.Row="1" Background="{StaticResource SolidColorBrush_HotChocolate}"
                                    CornerRadius="15">
                                <AdornerDecorator KeyboardNavigation.IsTabStop="False">
                                    <ContentPresenter KeyboardNavigation.TabNavigation="Cycle"
                                                  x:Name="MainContentPresenter"/>
                                </AdornerDecorator>
                            </Border>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>