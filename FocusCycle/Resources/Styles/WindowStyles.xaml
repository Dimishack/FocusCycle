<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:FocusCycle.Infrasctructure.Commands"
                    xmlns:ap="clr-namespace:FocusCycle.Infrasctructure.AttachedProperties">
    
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverte"/>
    
    <Style TargetType="Window"
           x:Key="WindowMainStyle">
        <Setter Property="ResizeMode" Value="CanMinimize"/>
        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome CaptionHeight="23"
                              CornerRadius="10"
                              UseAeroCaptionButtons="False"
                              ResizeBorderThickness="5"
                              GlassFrameThickness="0"
                              NonClientFrameEdges="None"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Window">
                    <Border x:Name="PART_Border" Background="{StaticResource SolidColorBrush_DarkChocolate}" Padding="7,5">
                        <Grid x:Name="PART_MainGrid">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="23"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0"
                                       Grid.Column="0"
                                       HorizontalAlignment="Center"
                                       Text="{TemplateBinding Title}"
                                       Margin="0,-3,0,2"
                                       WindowChrome.IsHitTestVisibleInChrome="False"/>
                            <UniformGrid Rows="1" 
                                         Grid.Row="0"
                                         Grid.Column="1"
                                         HorizontalAlignment="Right"
                                         Margin="0,-3,0,2"
                                         Visibility="{Binding RelativeSource={RelativeSource AncestorType=Window},
                                            Path=(ap:WindowProperties.ShowWindowManagerButtons),
                                            Converter={StaticResource BooleanToVisibilityConverte}}">
                                <Button Style="{StaticResource SettingButtonStyle}"
                                        Command="{Binding RelativeSource={RelativeSource AncestorType=Window},
                                            Path=(ap:WindowProperties.OpenSettingsCommand)}"/>
                                <Button Style="{StaticResource MinimizeWindowButtonStyle}">
                                    <Button.Command>
                                        <c:MinimizeWindowCommand/>
                                    </Button.Command>
                                </Button>
                                <Button Style="{StaticResource CloseWindowButtonStyle}">
                                    <Button.Command>
                                        <c:CloseWindowCommand/>
                                    </Button.Command>
                                </Button>
                            </UniformGrid>
                            <Border Grid.Row="1"
                                    Grid.ColumnSpan="2"
                                    Background="{StaticResource SolidColorBrush_HotChocolate}"
                                    CornerRadius="15">
                                <AdornerDecorator KeyboardNavigation.IsTabStop="False">
                                    <ContentPresenter KeyboardNavigation.TabNavigation="Cycle"
                                                  x:Name="MainContentPresenter"/>
                                </AdornerDecorator>
                            </Border>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>