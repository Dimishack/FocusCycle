<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="ContextMenu"
           x:Key="ContextMenuMainStyle">
        <Setter Property="Background" Value="{StaticResource SolidColorBrush_DarkChocolate}"/>
        <Setter Property="Padding" Value="0,5"/>
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="MenuItem">
                    <Setter Property="Background" Value="{StaticResource SolidColorBrush_Transparent}"/>
                    <Setter Property="Foreground" Value="{StaticResource SolidColorBrush_WhippedCream}"/>
                    <Setter Property="Padding" Value="13,5,30,5"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="MenuItem">
                                <Border Background="{TemplateBinding Background}"
                                        Margin="{TemplateBinding Margin}">
                                    <ContentPresenter ContentSource="Header"
                                                      HorizontalAlignment="Left"
                                                      VerticalAlignment="Center"
                                                      TextElement.FontSize="14"
                                                      TextElement.FontWeight="DemiBold"
                                                      TextElement.Foreground="{TemplateBinding Foreground}"
                                                      Margin="{TemplateBinding Padding}"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background"
                                    Value="{StaticResource SolidColorBrush_HotChocolate}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background"
                                    Value="{StaticResource SolidColorBrush_MarshmallowInChocolate}"/>
                            <Setter Property="Foreground"
                                    Value="{StaticResource SolidColorBrush_DarkChocolate}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContextMenu">
                    <Border Background="{TemplateBinding Background}"
                            Margin="{TemplateBinding Margin}"
                            Padding="{TemplateBinding Padding}">
                        <ItemsPresenter/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>