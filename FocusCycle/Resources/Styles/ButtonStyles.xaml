<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:icons="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp">

    <Style TargetType="Button" x:Key="ButtonMainStyle">
        <Setter Property="Foreground" Value="{StaticResource SolidColorBrush_Marshmallow}"/>
        <Setter Property="Background" Value="{StaticResource SolidColorBrush_Transparent}"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Margin" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Margin="{TemplateBinding Margin}"
                            Background="{TemplateBinding Background}"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}">
                        <icons:IconImage Icon="{TemplateBinding icons:IconImage.Icon}"
                                         Foreground="{TemplateBinding Foreground}"
                                         VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                         HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                         Margin="{TemplateBinding Padding}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="{StaticResource SolidColorBrush_LightMarshmallow}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Foreground" Value="{StaticResource SolidColorBrush_MarshmallowInChocolate}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style TargetType="Button" x:Key="ButtonManagerStyle"
           BasedOn="{StaticResource ButtonMainStyle}">
        <Setter Property="Foreground" Value="{StaticResource SolidColorBrush_HotChocolate}"/>
        <Setter Property="CommandParameter" Value="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
        <Setter Property="Width" Value="22"/>
        <Setter Property="Padding" Value="1"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="{StaticResource SolidColorBrush_WhippedCream}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Foreground" Value="{StaticResource SolidColorBrush_Marshmallow}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource ButtonManagerStyle}"
           x:Key="CloseWindowButtonStyle">
        <Setter Property="icons:IconImage.Icon" Value="Xmark"/>
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource ButtonManagerStyle}"
           x:Key="SettingButtonStyle">
        <Setter Property="icons:IconImage.Icon" Value="Gear"/>
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource ButtonManagerStyle}"
           x:Key="MinimizeWindowButtonStyle">
        <Setter Property="icons:IconImage.Icon" Value="Minus"/>
        <Setter Property="VerticalContentAlignment" Value="Bottom"/>
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource ButtonMainStyle}"
           x:Key="NextCycleButtonStyle">
        <Setter Property="Width" Value="40"/>
        <Setter Property="icons:IconImage.Icon" Value="CircleArrowRight"/>
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource ButtonMainStyle}"
           x:Key="TopmostTimerButtonStyle">
        <Setter Property="Width" Value="22"/>
        <Setter Property="icons:IconImage.Icon" Value="ShareSquare"/>
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource ButtonMainStyle}"
           x:Key="TopmostTimerButtonMainStyle">
        <Setter Property="Width" Value="20"/>
        <Setter Property="Foreground" Value="{StaticResource SolidColorBrush_Marshmallow}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="{StaticResource SolidColorBrush_MarshmallowInChocolate}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Foreground" Value="{StaticResource SolidColorBrush_WhippedCream}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource TopmostTimerButtonMainStyle}"
           x:Key="CloseTopmostTimerButtonStyle">
        <Setter Property="icons:IconImage.Icon" Value="SquareXmark"/>
    </Style>

</ResourceDictionary>