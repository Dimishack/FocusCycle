<Window x:Class="FocusCycle.Views.Windows.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FocusCycle.Views.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="MainWindow" Height="200" Width="500">
    <Window.Style>
        <Style TargetType="Window">
            <Setter Property="WindowChrome.WindowChrome">
                <Setter.Value>
                    <WindowChrome GlassFrameThickness="1"
                                  CaptionHeight="10"
                                  CornerRadius="15"
                                  NonClientFrameEdges="None"
                              />
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Style>
    <Border CornerRadius="10"
            Background="Aqua"
            Margin="5,10,5,5">
        <DockPanel>
            <Border DockPanel.Dock="Top" Background="SandyBrown"
                    Margin="3,5,3,3"
                    CornerRadius="10,10,0,0"
                    Height="52" VerticalAlignment="Top">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top"
                           TextWrapping="Wrap"
                           FontSize="18"
                           FontWeight="Black">
                Текст с приветствием <LineBreak/> (максимум 2 строки)
                </TextBlock>
            </Border>
            <Border DockPanel.Dock="Top" Background="GreenYellow"
                    Margin="3"
                    Height="30" 
                    VerticalAlignment="Top">
                <TextBlock Text="Текст с готовностью"
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           FontWeight="Bold"/>
            </Border>
            <UniformGrid Rows="1">
                <Button Margin="3" Content="Старт"/>
                <Button Margin="3" Content="Перерыв"/>
                <Button Margin="3" Content="Настройки"/>
                <Button Margin="3" Content="Закрыть"/>
            </UniformGrid>
        </DockPanel>
    </Border>
</Window>
