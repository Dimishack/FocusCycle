<Window x:Class="FocusCycle.Views.Windows.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FocusCycle.Views.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        ShowInTaskbar="False"
        Topmost="True"
        AllowsTransparency="True"
        Background="Transparent"
        
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:vm="clr-namespace:FocusCycle.ViewModels"
        d:DataContext="{d:DesignInstance {x:Type vm:StartWViewModel}, IsDesignTimeCreatable=True}"
        Title="StartWindow" Height="100" Width="400">
    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard TargetProperty="Opacity">
                    <DoubleAnimation From="0"
                                     To="1"
                                     Duration="0:0:0.5"
                                     DecelerationRatio="0.2"/>
                    <DoubleAnimation BeginTime="0:0:4.5"
                                     From="1"
                                     To="0"
                                     Duration="0:0:0.5"
                                     AccelerationRatio="0.2"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Border CornerRadius="10"
            Background="Aqua"
            Margin="5,10,5,5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="SandyBrown"
                    Margin="3,5,3,3"
                    CornerRadius="10,10,0,0" 
                    VerticalAlignment="Top">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top"
                           TextWrapping="Wrap"
                           FontSize="18"
                           FontWeight="Black">Открывается программа FocusCycle
                </TextBlock>
            </Border>
            <Border Grid.Row="1" Background="GreenYellow"
                    Margin="3"
                    VerticalAlignment="Top">
                <TextBlock Text="Текст с готовностью (из БД)"
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           FontWeight="Bold"/>
            </Border>
        </Grid>
    </Border>
</Window>