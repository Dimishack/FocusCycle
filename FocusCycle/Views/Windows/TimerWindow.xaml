<Window x:Class="FocusCycle.Views.Windows.TimerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FocusCycle.Views.Windows"
        
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:cusB="clr-namespace:FocusCycle.Infrasctructure.Behaviors"
        xmlns:vm="clr-namespace:FocusCycle.ViewModels"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:ap="clr-namespace:FocusCycle.Infrasctructure.AttachedProperties"
        
        d:DataContext="{d:DesignInstance {x:Type vm:TimerViewModel}}"
        ap:WindowProperties.ShowWindowManagerButtons="True"
        ap:WindowProperties.OpenSettingsCommand="{Binding OpenSettingsCommand}"
        Visibility="{Binding WindowVisibility, UpdateSourceTrigger=PropertyChanged}"
        mc:Ignorable="d"
        Style="{StaticResource WindowMainStyle}"
        Title="" Height="120" Width="270">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedAsyncCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <i:Interaction.Behaviors>
        <cusB:WindowVisibilityBehavior WindowVisibility="{Binding WindowVisibility}"/>
    </i:Interaction.Behaviors>
    <Window.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource TextBlockMainStyle}"/>
    </Window.Resources>
    <DockPanel>
        <tb:TaskbarIcon IconSource="/Resources/icon.ico" 
                        ToolTipText="FocusCycle"
                        DoubleClickCommand="{Binding ChangeWindowVisibilityCommand}">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu Style="{StaticResource ContextMenuMainStyle}">
                    <MenuItem Header="Открыть FocusCycle"
                              Command="{Binding OpenWindowCommand}"/>
                    <MenuItem Header="{Binding ActionTimerString}"
                              Command="{Binding PlayPauseTimerCommand}"/>
                    <MenuItem Header="Перезапустить таймер"
                              Command="{Binding RestartTimerCommand}"/>
                    <MenuItem Header="Закрыть FocusCycle"
                              Command="{Binding ShutdownWindowAsyncCommand}"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="35"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="1"
                       Text="{Binding CurrentTimer.CurrentTimerString}"
                       FontSize="28"
                       FontWeight="Black"
                       TextAlignment="Center"
                       Margin="0,0,0,0"/>
            <Button Grid.Column="2"
                    HorizontalAlignment="Center"
                    Style="{StaticResource TopmostTimerButtonStyle}"
                    Command="{Binding OpenTopmostTimerWindowCommand}"/>
        </Grid>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    DockPanel.Dock="Top">
        </StackPanel>
        <ToggleButton DockPanel.Dock="Left"
                      Style="{StaticResource PlayPauseToggleButtonStyle}"
                      VerticalAlignment="Top"
                      IsChecked="{Binding IsTimerPause}"
                      Command="{Binding PlayPauseTimerCommand}"/>
        <Button DockPanel.Dock="Right"
                Style="{StaticResource NextCycleButtonStyle}"
                VerticalAlignment="Top"
                Command="{Binding PlayNextCycleCommand}"/>
        <TextBlock Text="{Binding CurrentTimer.TimerString}"
                   FontWeight="Bold"
                   FontSize="40"
                   HorizontalAlignment="Stretch"
                   TextAlignment="Center"
                   VerticalAlignment="Top"/>
    </DockPanel>
</Window>
