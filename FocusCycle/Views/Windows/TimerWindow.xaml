<Window x:Class="FocusCycle.Views.Windows.TimerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FocusCycle.Views.Windows"
        
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:vm="clr-namespace:FocusCycle.ViewModels"
        xmlns:ap="clr-namespace:FocusCycle.Infrasctructure.AttachedProperties"
        
        d:DataContext="{d:DesignInstance {x:Type vm:TimerViewModel}}"
        ap:WindowProperties.ShowSettings="True"
        mc:Ignorable="d"
        Style="{StaticResource WindowMainStyle}"
        Title="TimerWindow" Height="160" Width="270">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedAsyncCommand}"/>
        </i:EventTrigger>
        <i:EventTrigger EventName="Closed">
            <i:InvokeCommandAction Command="{Binding ClosedCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Window.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource TextBlockMainStyle}"/>
    </Window.Resources>
    <DockPanel>
        <TextBlock DockPanel.Dock="Top"
                   Text="{Binding Header}"
                   FontSize="32"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontWeight="Bold"
                   Margin="0,0,0,5"/>
        <Button DockPanel.Dock="Bottom"
                HorizontalAlignment="Right"
                Margin="0,0,2,0"
                Padding="2"
                Style="{StaticResource TopmostTimerButtonStyle}"
                Command="{Binding OpenTopmostTimerWindowCommand}"/>
        <ToggleButton DockPanel.Dock="Left"
                      Style="{StaticResource PlayPauseToggleButtonStyle}"
                      VerticalAlignment="Top"
                      IsChecked="{Binding IsTimerPause}"
                      Command="{Binding PlayPauseTimerCommand}"/>
        <Button DockPanel.Dock="Right"
                Style="{StaticResource NextCycleButtonStyle}"
                VerticalAlignment="Top"
                Command="{Binding PlayNextCycleCommand}"/>
        <TextBlock Text="{Binding TimerModel.TimeString}"
                   FontWeight="Bold"
                   FontSize="40"
                   HorizontalAlignment="Stretch"
                   TextAlignment="Center"
                   VerticalAlignment="Top"/>
    </DockPanel>
</Window>
