<Window x:Class="FocusCycle.Views.Windows.TopmostTimerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FocusCycle.Views.Windows"
        mc:Ignorable="d"
        Topmost="True"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Background="{StaticResource SolidColorBrush_Transparent}"
        
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:cusB="clr-namespace:FocusCycle.Infrasctructure.Behaviors"
        
        Title="TopmostTimerWindow" Height="110" Width="320">
    <Window.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource TextBlockMainStyle}"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" 
                   Grid.Column="0" 
                   Text="{Binding CurrentTimer.CurrentTimerString}"
                   FontSize="26"
                   FontWeight="Black"
                   TextAlignment="Center"
                   Foreground="{StaticResource SolidColorBrush_Marshmallow}"
                   VerticalAlignment="Top">
            <i:Interaction.Behaviors>
                <cusB:DragMoveWindowBehavior/>
            </i:Interaction.Behaviors>
        </TextBlock>

        <Button Grid.Row="0"
                Grid.Column="1" 
                Command="{Binding CloseWindowCommand}"
                Style="{StaticResource CloseTopmostTimerButtonStyle}"/>

        <Viewbox Stretch="Uniform"
                 Grid.ColumnSpan="2"
                 Grid.Row="1"
                 Margin="0,-15,0,0">
            <TextBlock Text="{Binding CurrentTimer.TimerString}"
                   Foreground="{StaticResource SolidColorBrush_Marshmallow}"
                   FontWeight="Bold"
                   TextAlignment="Center">
            <i:Interaction.Behaviors>
                <cusB:TextBlockFlickeringBehavior PlayFlicker="{Binding PlayFlicker}"/>
                <cusB:DragMoveWindowBehavior/>
            </i:Interaction.Behaviors>
            </TextBlock>
        </Viewbox>
    </Grid>
</Window>
